rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getRole(request.auth.uid) == 'Admin';
    }

    function isManager() {
      let userRole = getRole(request.auth.uid);
      return isSignedIn() && (userRole == 'Manager' || userRole == 'Admin');
    }
    
    function isInstructor() {
      let userRole = getRole(request.auth.uid);
      return isSignedIn() && (userRole == 'Instructor' || isManager());
    }

    function isRider() {
      return isSignedIn(); // Any authenticated user can be a rider.
    }

    // COLLECTION RULES

    // Users: Users can read their own data. Only admins can change roles or create non-Rider users.
    match /users/{userId} {
      allow get: if isOwner(userId) || isManager();
      allow list: if isManager();
      // Only Admins can create privileged users. Users can create their own 'Rider' account.
      allow create: if (isAdmin() || (isOwner(userId) && request.resource.data.role == 'Rider'));
      // Only Admins can change roles. Users can update their own profile.
      allow update: if (isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role));
      allow delete: if isAdmin();
    }
    
    // Customers: Logged-in users can manage their own customer document. Managers can see all.
    match /customers/{customerId} {
      allow get, update, delete: if (isSignedIn() && isOwner(customerId)) || isManager();
      allow create: if isSignedIn() && isOwner(customerId);
      allow list: if isManager();
    }
    
    // Horses: Publicly readable, but only managers/admins can write.
    match /horses/{horseId} {
      allow get, list: if true;
      allow create, update, delete: if isManager();
    }

    // Instructors: Publicly readable, but only managers/admins can write.
    match /instructors/{instructorId} {
      allow get, list: if true;
      allow create, update, delete: if isManager();
    }
    
    // Lessons: 
    // Riders can create and manage their own lessons.
    // Instructors can view/update lessons assigned to them.
    // Managers can manage all lessons.
    match /lessons/{lessonId} {
      allow get: if (isRider() && resource.data.userId == request.auth.uid) || (isInstructor() && resource.data.instructorId == request.auth.uid) || isManager();
      allow list: if isInstructor(); // Instructors and Managers can list lessons.
      allow create: if isRider() && request.resource.data.userId == request.auth.uid;
      allow update: if (isRider() && resource.data.userId == request.auth.uid) || (isInstructor() && resource.data.instructorId == request.auth.uid) || isManager();
      allow delete: if isManager() || (isRider() && resource.data.userId == request.auth.uid);
    }

    // Availability: 
    // Any signed-in user can read availability.
    // Instructors can manage their own availability. Managers can manage all.
    match /availability/{availabilityId} {
        allow get, list: if isSignedIn();
        allow create: if isInstructor() && request.resource.data.instructorId == request.auth.uid;
        allow update: if (isInstructor() && resource.data.instructorId == request.auth.uid) || isManager();
        allow delete: if isManager();
    }

    // Museum Rentals: 
    // Signed-in users can create rental requests for themselves.
    // Managers can view and manage all rentals.
    match /museumRentals/{rentalId} {
        allow get, list: if isManager();
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isManager();
    }
    
    // Team Chat: Readable and writable by any instructor or manager.
    match /team-chat/{messageId} {
      allow read, create: if isInstructor();
      allow update, delete: if false; // Messages are immutable.
    }
  }
}
