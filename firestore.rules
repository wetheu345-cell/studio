rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      let userRole = getRole(request.auth.uid);
      return userRole == 'Admin';
    }

    function isManager() {
      let userRole = getRole(request.auth.uid);
      return userRole == 'Manager' || userRole == 'Admin';
    }
    
    function isInstructor() {
        return getRole(request.auth.uid) == 'Instructor' || isManager();
    }

    function isRider() {
        return getRole(request.auth.uid) == 'Rider' || isInstructor();
    }

    // COLLECTION RULES

    // Users: Users can read their own data. Only admins can change roles.
    match /users/{userId} {
      allow get: if isOwner(userId) || isManager();
      allow list: if isManager();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
    }
    
    // Customers: Users can only access their own customer document.
    match /customers/{customerId} {
      allow get, update, delete: if isOwner(customerId) || isManager();
      allow create: if isOwner(customerId);
      allow list: if isManager();
    }
    
    // Horses: Publicly readable, but only managers/admins can write.
    match /horses/{horseId} {
      allow get, list: if true;
      allow create, update, delete: if isManager();
    }

    // Instructors: Publicly readable, but only managers/admins can write.
    match /instructors/{instructorId} {
      allow get, list: if true;
      allow create, update, delete: if isManager();
    }
    
    // Lessons: 
    // Riders can create and view their own lessons.
    // Instructors can view lessons assigned to them.
    // Managers can view all lessons.
    match /lessons/{lessonId} {
      allow get: if isRider() && (isOwner(resource.data.userId)) || isInstructor() && resource.data.instructorId == request.auth.uid || isManager();
      allow list: if isInstructor();
      allow create: if isRider() && isOwner(request.resource.data.userId);
      allow update: if isRider() && isOwner(resource.data.userId) || isInstructor() && resource.data.instructorId == request.auth.uid || isManager();
      allow delete: if isManager();
    }

    // Availability: 
    // Any signed-in user can read availability.
    // Instructors can create/update their own availability.
    match /availability/{availabilityId} {
        allow get, list: if isSignedIn();
        allow create: if isInstructor() && isOwner(request.resource.data.instructorId);
        allow update, delete: if isInstructor() && (isOwner(resource.data.instructorId)) || isManager();
    }

    // Museum Rentals: 
    // Signed-in users can create rental requests.
    // Managers can view and manage all rentals.
    match /museumRentals/{rentalId} {
        allow get, list: if isManager();
        allow create: if isSignedIn() && isOwner(request.resource.data.userId);
        allow update, delete: if isManager();
    }
    
    // Team Chat: Readable and writable by any authenticated user (instructor or manager).
    match /team-chat/{messageId} {
      allow read, create: if isInstructor();
      allow update, delete: if false; // Messages are immutable.
    }
  }
}
