rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // By default, deny all reads and writes.
    match /{document=**} {
      allow read, write: if false;
    }

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isManager() {
      return request.auth.token.email == 'wetheu345@gmail.com';
    }

    // COLLECTION RULES

    // Customers: Users can only access their own customer document.
    match /customers/{customerId} {
      allow get, update, delete: if isOwner(customerId);
      allow create: if isOwner(customerId) && request.resource.data.id == customerId;
      // Do not allow listing all customers for privacy.
      allow list: if false;
    }
    
    // Horses: Publicly readable, but only the manager can write.
    match /horses/{horseId} {
      allow get, list: if true;
      allow create, update, delete: if isManager();
    }

    // Instructors: Publicly readable, but only the manager can write.
    match /instructors/{instructorId} {
      allow get, list: if true;
      allow create, update, delete: if isManager();
    }
    
    // Lessons: Readable by the manager or the customer who owns it.
    // Writable only by the customer who owns it.
    match /lessons/{lessonId} {
      allow get: if (isOwner(resource.data.userId)) || isManager();
      allow list: if isManager(); // Only manager can see all lessons.
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Availability: Writable by the associated instructor (or manager).
    // Readable by any signed-in user to check for open slots.
    match /availability/{availabilityId} {
        allow get, list: if isSignedIn();
        allow create: if isSignedIn(); // Further checks in app logic
        allow update, delete: if isSignedIn() && (isOwner(resource.data.instructorId) || isManager());
    }

    // Museum Rentals: Writable by any signed-in user.
    // Readable only by the manager.
    match /museumRentals/{rentalId} {
        allow get, list: if isManager();
        allow create: if isSignedIn() && isOwner(request.resource.data.userId);
        allow update: if isManager(); // Only manager can confirm/cancel.
        allow delete: if isManager();
    }
    
    // Team Chat: Readable and writable by any authenticated user.
    // This allows for a simple team-wide chat.
    match /team-chat/{messageId} {
      allow read, create: if isSignedIn();
      allow update, delete: if false; // Messages are immutable.
    }
  }
}
